@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<style>
    /* Clean up: Reorganized CSS for better readability and maintenance */

    /* Global and Layout */
    .footer {
        display: none;
    }


    /* Background Video Container */
    .background-container {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding: 2rem 0;
        overflow: hidden;
    }

    /* Video Background */
    .video-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    /* Fallback for browsers that don't support video */
    .no-video .video-background {
        display: none;
    }

    .no-video .background-container {
        background-image: url('@Url.Content("~/Home/img/dead6.jpg")');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    /* Card Design */
    .form-card {
        background-color: rgba(255, 255, 255, 0.85);
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(8px);
        transition: all 0.3s ease;
    }

        .form-card:hover {
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.25);
        }

    .card-body {
        padding: 2.5rem;
    }

    /* Form Elements */
    .form-floating {
        margin-bottom: 1.25rem;
    }

    .form-controlR {
        background-color: rgba(255, 255, 255, 0.85);
        border: 1px solid #dee2e6;
        border-radius: 8px;
        transition: all 0.2s ease;
    }

        .form-controlR:focus {
            border-color: #86B817;
            box-shadow: 0 0 0 0.25rem rgba(134, 184, 23, 0.25);
        }

    .toggle-form {
        cursor: pointer;
        color: #0d6efd;
        text-decoration: none;
        font-weight: 500;
    }

        .toggle-form:hover {
            text-decoration: underline;
            color: #0a58ca;
        }

    pR {
        margin: 0;
    }

    /* Button Styling */
    .btn-primary {
        background: linear-gradient(to right, #86B817, #6A940D);
        border: none;
        padding: 0.75rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(106, 148, 13, 0.2);
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #6A940D, #86B817);
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(106, 148, 13, 0.3);
        }

        .btn-primary:active {
            transform: translateY(1px);
        }

    /* Navbar Styling */
    .navbar {
        background-color: rgba(255, 255, 255, 0.85) !important;
        transition: background-color 0.5s ease;
        backdrop-filter: blur(8px);
    }

        .navbar {
            background-color: rgba(255, 255, 255, 0.85) !important;
        }

        .navbar {
            background-color: rgba(255, 255, 255, 0.85) !important;
        }

    .navbar-light .navbar-nav .nav-link {
        font-family: 'Nunito', sans-serif;
        position: relative;
        margin-right: 25px;
        padding: 35px 0;
        color: #000000 !important;
        font-size: 18px;
        font-weight: 600;
        outline: none;
        transition: .5s;
    }

    .shadow-sm {
        box-shadow: 0 0rem 0rem rgba(0, 0, 0, 0) !important;
    }

    .row {
        padding-top: 10px !important;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .background-container {
            padding: 1rem;
        }

        .card-body {
            padding: 1.5rem;
        }
        /* Disable video on mobile */
        .video-background {
            display: none;
        }

        .background-container {
            background-image: url('@Url.Content("~/Home/img/dead6.jpg")');
            background-size: cover;
            background-position: center;
        }

        .form-card {
            margin: 0 10px;
        }
    }

    /* Animations */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in {
        animation: fadeIn 0.5s ease-out forwards;
    }
</style>

<!-- Modernizr check for video support -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (!Modernizr.video) {
            document.documentElement.className += ' no-video';
        }

        // Add fade-in animation to form card
        document.querySelector('.form-card').classList.add('fade-in');
    });
</script>

