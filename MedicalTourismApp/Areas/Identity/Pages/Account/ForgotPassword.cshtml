@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    :root {
        --primary-color: #86B817;
        --primary-hover: #739E14;
        --primary-light: rgba(134, 184, 23, 0.1);
        --text-color: #2D3748;
        --text-secondary: #4A5568;
        --border-color: #E2E8F0;
        --background-color: #F8FAFC;
    }

    body {
        background-color: var(--background-color);
    }

    .password-reset-container {
        max-width: 500px;
        margin: 3rem auto;
        padding: 2.5rem;
        border-radius: 12px;
        background-color: #ffffff;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--border-color);
    }

    .password-reset-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .password-reset-title {
        font-weight: 700;
        color: var(--text-color);
        margin-bottom: 1rem;
    }

    .password-reset-subtitle {
        color: var(--text-secondary);
        font-weight: 400;
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .password-reset-form .form-control {
        padding: 1rem;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

        .password-reset-form .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(134, 184, 23, 0.2);
        }

    .password-reset-form .form-floating label {
        color: var(--text-secondary);
        padding: 1rem;
    }

    .password-reset-form .btn-primary {
        background-color: var(--primary-color);
        border: none;
        padding: 1rem;
        border-radius: 8px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

        .password-reset-form .btn-primary:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(134, 184, 23, 0.3);
        }

        .password-reset-form .btn-primary:active {
            transform: translateY(0);
        }

    .validation-summary {
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        background-color: #FEE2E2;
        color: #B91C1C;
    }

    .divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
        color: var(--text-secondary);
    }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid var(--border-color);
        }

        .divider::before {
            margin-right: 1rem;
        }

        .divider::after {
            margin-left: 1rem;
        }

    .back-to-login {
        text-align: center;
        margin-top: 1.5rem;
        color: var(--text-secondary);
    }

        .back-to-login a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
        }

            .back-to-login a:hover {
                text-decoration: underline;
                color: var(--primary-hover);
            }

    .form-icon {
        color: var(--primary-color);
        margin-bottom: 1.5rem;
    }

    .input-group-text {
        background-color: var(--primary-light);
        border-color: var(--border-color);
        color: var(--primary-color);
    }
</style>

<div class="password-reset-container">
    <div class="password-reset-header">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock form-icon">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
        </svg>
        <h1 class="password-reset-title">@ViewData["Title"]</h1>
        <p class="password-reset-subtitle">Enter your email address and we'll send you a link to reset your password.</p>
    </div>

    <form method="post" class="password-reset-form">
        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary" role="alert"></div>

        <div class="form-floating mb-4">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-envelope"></i>
                </span>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                
            </div>
            <span asp-validation-for="Input.Email" class="text-danger small d-block mt-1"></span>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-primary mb-3">
            <i class="fas fa-paper-plane me-2"></i> Send Reset Link
        </button>

        <div class="divider">or</div>

        <div class="back-to-login">
            Remember your password? <a href="/Identity/Account/Login">Sign in</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}