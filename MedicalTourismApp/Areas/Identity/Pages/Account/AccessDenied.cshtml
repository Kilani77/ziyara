@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

  

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg p-4 text-center" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h1 class="display-4 text-danger">
                <i class="bi bi-shield-lock-fill"></i> Access Denied
            </h1>
            <p class="mt-3 fs-5">
                You don’t have permission to view this page.<br />
                Please contact the administrator if you believe this is a mistake.
            </p>
            <a asp-page="/Index" class="btn mt-4" style="background-color: #86B817; color: white;">
                <i class="bi bi-house-door-fill"></i> Back to Home
            </a>
          

        </div>
    </div>
</div>

<!-- Bootstrap icons CDN (optional but recommended) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

