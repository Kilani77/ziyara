</div>
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 overflow-hidden">
                <div class="card-header text-white py-4" style="background: linear-gradient(135deg, #86B817 0%, #9BD117 100%);">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-passport fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h2 class="h3 mb-1">Tourist Registration</h2>
                            <p class="mb-0 opacity-75">Complete your profile for a better experience</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form method="post" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Input.Nationality" class="form-control" id="nationality" placeholder="Enter your country" />
                                <label for="nationality">Nationality</label>
                                <span asp-validation-for="Input.Nationality" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Input.PassportNumber" class="form-control" id="passportNumber" placeholder="AB1234567" />
                                <label for="passportNumber">Passport Number</label>
                                <span asp-validation-for="Input.PassportNumber" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Input.PreferredLanguage" class="form-control" id="preferredLanguage" placeholder="Enter preferred language" />
                                <label for="preferredLanguage">Preferred Language</label>
                                <span asp-validation-for="Input.PreferredLanguage" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-lg py-3 text-white fw-bold"
                                    style="background: linear-gradient(135deg, #86B817 0%, #9BD117 100%);
                                           border: none;
                                           letter-spacing: 1px;">
                                <i class="fas fa-user-check me-2"></i>COMPLETE REGISTRATION
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --primary-color: #86B817;
            --primary-light: #d1e7a3;
            --primary-dark: #769e14;
        }

        .card {
            border-radius: 16px;
            overflow: hidden;
            border: none;
        }

        .card-header {
            border-bottom: none;
        }

        .form-floating > label {
            color: #6c757d;
        }

        .form-control, .form-select {
            border-radius: 8px;
            padding: 1rem 1.25rem;
            border: 1px solid #dee2e6;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.25rem rgba(134, 184, 23, 0.15);
            }

        .btn {
            transition: all 0.4s;
            border-radius: 10px;
            position: relative;
            overflow: hidden;
        }

            .btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(134, 184, 23, 0.3);
            }

            .btn:active {
                transform: translateY(-1px);
            }

        .footer {
            display: none;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}