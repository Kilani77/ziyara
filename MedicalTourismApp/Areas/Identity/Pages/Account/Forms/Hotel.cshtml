                                <span asp-validation-for="Input.LicenseDocuments" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Image Upload Section -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Hotel Images</label>
                            <div class="file-upload-wrapper">
                                <input type="file" asp-for="Input.Images" multiple class="form-control form-control-lg" id="hotelImages" accept="image/*" />
                                <small class="form-text text-muted">Upload high-quality photos of your hotel (max 10 images)</small>
                                <span asp-validation-for="Input.Images" class="text-danger small"></span>
                            </div>
                            <div id="imagePreview" class="d-flex flex-wrap gap-2 mt-3"></div>
                        </div>

