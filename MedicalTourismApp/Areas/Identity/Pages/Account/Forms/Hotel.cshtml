<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header text-white py-4" style="background: linear-gradient(135deg, #86B817 0%, #9BD117 100%);">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">

                            <i class="fas fa-hotel fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h2 class="h3 mb-1">Hotel Registration</h2>
                            <p class="mb-0 opacity-75">Complete your professional profile to start receiving patients</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Hotel Name</label>
                                    <input asp-for="Input.Name" class="form-control form-control-lg" placeholder="Royal Jordanian Hotel" />
                                    <span asp-validation-for="Input.Name" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <label class="form-label fw-bold">Location:</label>
                                    <div class="input-group">
                                        <input type="text" id="location-display" class="form-control" readonly placeholder="Click to select location" />
                                        <input type="hidden" asp-for="Input.Location" id="location-input" />
                                    </div>
                                    <span asp-validation-for="Input.Location" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Contact Number</label>
                                    <input asp-for="Input.ContactNumber" class="form-control form-control-lg" placeholder="+962 7X XXX XXXX" />
                                    <span asp-validation-for="Input.ContactNumber" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Guest Capacity</label>
                                    <input asp-for="Input.capacityOfPlace" class="form-control form-control-lg" placeholder="50" />
                                    <span asp-validation-for="Input.capacityOfPlace" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Starting Price (USD)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Input.StartingPrice" class="form-control form-control-lg" placeholder="Starting Price" />
                                    </div>
                                    <span asp-validation-for="Input.StartingPrice" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Hotel Description</label>
                                    <textarea asp-for="Input.Bio" class="form-control form-control-lg" rows="3" placeholder="Describe your hotel's features and amenities"></textarea>
                                    <span asp-validation-for="Input.Bio" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Amenities</label>
                                    <div class="form-check form-switch mb-2">
                                        <input class="form-check-input" type="checkbox" asp-for="Input.HasGym" id="hasGym">
                                        <label class="form-check-label" for="hasGym">Gym Facility</label>
                                    </div>
                                    <div class="form-check form-switch mb-2">
                                        <input class="form-check-input" type="checkbox" asp-for="Input.Haspool" id="hasPool">
                                        <label class="form-check-label" for="hasPool">Swimming Pool</label>
                                    </div>
                                    <div class="form-check form-switch mb-2">
                                        <input class="form-check-input" type="checkbox" asp-for="Input.parkingAvailablity" id="hasParking">
                                        <label class="form-check-label" for="hasParking">Parking Available</label>
                                    </div>
                                    <div class="form-check form-switch mb-2">
                                        <input class="form-check-input" type="checkbox" asp-for="Input.breakFastIncluded" id="hasBreakfast">
                                        <label class="form-check-label" for="hasBreakfast">Breakfast Included</label>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" asp-for="Input.availablete" id="isAvailable">
                                        <label class="form-check-label" for="isAvailable">Currently Available</label>
                                    </div>
                                </div>
                            </div>
