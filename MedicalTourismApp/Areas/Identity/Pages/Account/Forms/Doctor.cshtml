<style>
    :root {
        --primary-color: #86B817;
        --primary-dark: #6e9f14;
        --secondary-color: #264653;
        --accent-color: #e9c46a;
        --light-gray: #f8f9fa;
        --dark-gray: #6c757d;
        --white: #ffffff;
        --shadow-sm: 0 1px 3px rgba(0,0,0,0.12);
        --shadow-md: 0 4px 6px rgba(0,0,0,0.1);
        --shadow-lg: 0 10px 25px rgba(0,0,0,0.1);
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Poppins', sans-serif;
        line-height: 1.6;
    }

    .registration-container {
        max-width: 900px;
        margin: 3rem auto;
       
        overflow: hidden;
        box-shadow: var(--shadow-lg);
        background-color: var(--white);
    }

    .registration-header {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white;
        padding: 2.5rem 2rem;
        text-align: center;
        position: relative;
    }

        .registration-header h2 {
            margin: 0;
            font-weight: 700;
            font-size: 2.2rem;
            position: relative;
            display: inline-block;
        }

            .registration-header h2::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 60px;
                height: 3px;
                background-color: var(--white);
            }

        .registration-header p {
            margin-top: 1rem;
            font-size: 1.1rem;
            opacity: 0.9;
        }

    .registration-body {
        padding: 3rem;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -1rem;
    }

    .form-col {
        flex: 1;
        min-width: 250px;
        padding: 0 1rem;
    }

    .form-group {
        margin-bottom: 1.8rem;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.6rem;
            font-weight: 600;
            color: var(--secondary-color);
            font-size: 0.95rem;
        }

    .form-control {
        width: 100%;
        padding: 0.85rem 1.2rem;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: var(--white);
    }

        .form-control:focus {
            border-color: var(--primary-color);
            outline: none;
            box-shadow: 0 0 0 3px rgba(134, 184, 23, 0.2);
        }

    textarea.form-control {
        min-height: 140px;
        resize: vertical;
        line-height: 1.5;
    }

    .btn-primaryD {
        background: linear-gradient(to right, var(--primary-color), var(--primary-dark));
        color: white;
        border: none;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
        margin-top: 1.5rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-shadow: var(--shadow-sm);
    }

        .btn-primary:hover {
            background: linear-gradient(to right, var(--primary-dark), var(--primary-color));
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        .btn-primary i {
            margin-right: 0.5rem;
        }

    .text-danger {
        font-size: 0.85rem;
        margin-top: 0.4rem;
        display: block;
        color: #dc3545;
    }

    /* File Upload Styling */
    .file-upload-wrapper {
        position: relative;
        margin-top: 0.5rem;
    }

    .file-upload-label {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        border: 2px dashed #e9ecef;
        border-radius: 8px;
        background-color: rgba(134, 184, 23, 0.05);
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
        min-height: 150px;
    }

        .file-upload-label:hover {
            border-color: var(--primary-color);
            background-color: rgba(134, 184, 23, 0.1);
        }

        .file-upload-label i {
            font-size: 2rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .file-upload-label span {
            color: var(--dark-gray);
            font-size: 0.95rem;
        }

    .file-upload-input {
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    /* Image Preview */
    .image-preview-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .image-preview {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 8px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
    }

        .image-preview:hover {
            border-color: var(--primary-color);
            transform: scale(1.05);
        }

    /* Location Input */
    .location-input-group {
        position: relative;
    }

        .location-input-group .form-control {
            padding-right: 40px;
            cursor: pointer;
        }

        .location-input-group::after {
            content: "\f3c5";
            font-family: "Font Awesome 5 Free";
            font-weight: 900;
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-color);
            pointer-events: none;
        }

    /* Modal Styling */
    .modal-header {
        border-bottom: none;
        padding-bottom: 0;
    }

    .modal-title {
        font-weight: 600;
        color: var(--secondary-color);
    }

    .modal-footer {
        border-top: none;
    }

    #selected-location {
        font-weight: 500;
        margin-top: 1rem;
    }

    #location-address {
        font-weight: normal;
        color: var(--primary-color);
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .registration-container {
            margin: 1.5rem;
            border-radius: 10px;
        }

        .registration-body {
            padding: 2rem;
        }

        .form-col {
            flex: 100%;
            margin-bottom: 1rem;
        }

        .image-preview {
            width: 80px;
            height: 80px;
        }
    }

    @@media (max-width: 576px) {
        .registration-header {
            padding: 1.5rem 1rem;
        }

            .registration-header h2 {
                font-size: 1.8rem;
            }

        .registration-body {
            padding: 1.5rem;
        }

        .btn-primary {
            padding: 0.9rem;
            font-size: 1rem;
        }
    }


