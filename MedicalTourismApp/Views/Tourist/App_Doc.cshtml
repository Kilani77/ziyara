@model MedicalTourismApp.Controllers.TouristController.BookingViewModel

<style>
    :root {
        --primary-color: #86B817;
        --primary-dark: #6A940D;
        --secondary-color: #2c3e50;
        --light-gray: #f8f9fa;
        --dark-gray: #6c757d;
    }

    .booking-container { 
        max-width: 800px;
        margin: 40px auto;
        padding: 40px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        font-family: 'Poppins', sans-serif;
    }

    h2 {
        color: var(--secondary-color);
        margin-bottom: 30px;
        font-weight: 700;
        text-align: center;
        position: relative;
        padding-bottom: 15px;
    }

        h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(to right, var(--primary-color), var(--primary-dark));
            border-radius: 2px;
        }

    h3 {
        color: var(--secondary-color);
        margin: 30px 0 20px;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 25px;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: var(--secondary-color);
            font-weight: 500;
            font-size: 16px;
        }

        .form-group input[type="date"] {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .form-group input[type="date"]:focus {
                border-color: var(--primary-color);
                outline: none;
                box-shadow: 0 0 0 3px rgba(134, 184, 23, 0.2);
            }

    .time-slots-container {
        margin-top: 40px;
        animation: fadeIn 0.5s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .slots-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 15px;
        margin: 25px 0;
    }

    .time-slot {
        display: block;
        position: relative;
    }

        .time-slot input[type="radio"] {
            position: absolute;
            opacity: 0;
        }

    .slot-time {
        display: block;
        padding: 14px 10px;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
        background: white;
    }

    .time-slot input[type="radio"]:checked + .slot-time {
        background: var(--primary-color);
        color: white;
        border-color: var(--primary-color);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(134, 184, 23, 0.3);
    }

    .time-slot input[type="radio"]:not(:checked) + .slot-time:hover {
        border-color: var(--primary-color);
        background: rgba(134, 184, 23, 0.1);
    }

    .btn {
        padding: 14px 28px;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-primary {
        background: linear-gradient(to right, var(--primary-color), var(--primary-dark));
        color: white;
        box-shadow: 0 4px 15px rgba(134, 184, 23, 0.3);
    }

        .btn-primary:hover {
            background: linear-gradient(to right, var(--primary-dark), var(--primary-color));
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(134, 184, 23, 0.4);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

    .alert {
        padding: 16px;
        border-radius: 8px;
        margin: 25px 0;
        font-weight: 500;
        display: flex;
        align-items: center;
    }

    .alert-warning {
        background-color: #fff8e6;
        color: #856404;
        border: 1px solid #ffeeba;
    }

        .alert-warning::before {
            content: "⚠️";
            margin-right: 10px;
            font-size: 20px;
        }

    .doctor-info {
        text-align: center;
        margin-bottom: 30px;
    }

    .doctor-infoD {
        
        margin-bottom: 30px;
    }
    .doctor-name {
        font-size: 24px;
        font-weight: 700;
        color: var(--secondary-color);
        margin-bottom: 5px;
    }

    .doctor-specialty {
        color: var(--primary-color);
        font-weight: 600;
        font-size: 18px;
    }

    @@media (max-width: 768px) {
        .booking-container {
            padding: 30px 20px;
            margin: 20px;
        }

        .slots-grid {
            grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        }

        h2 {
            font-size: 24px;
        }
    }

    .info-box {
        display: flex;
        align-items: flex-start;
        background-color: #f0f9ff;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

        .info-box i {
            color: var(--primary);
            margin-right: 1rem;
            font-size: 1.25rem;
            margin-top: 0.15rem;
        }

    .nurse-details {
