	<div class="booking-container" style="margin-top:100px">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="doctor-info">
 
    <div class="nurse-profile">
        <div class="nurse-avatar" style="margin-inline:auto">
            <i class="fas fa-user-nurse"></i>
        </div>
        <div class="nurse-details">
            <h3>Dr.@Model.DoctorName</h3>
            <p>Specialized in patient care and medical assistance</p>
            <span class="badge">
                <i class="fas fa-certificate"></i> Certified Professional
            </span>
        </div>
    </div>
    </div>
        <div class="doctor-infoD">
        <div class="info-box ">
        <i class="fas fa-info-circle"></i>
        <div class="info-content ">
            <strong>Important Note</strong>
            <p>Gray dates on the calendar indicate unavailable time slots. Please select from the available dates shown in white.</p>
        </div>
		</div>
	</div>
    <!-- Step 1: Select Date -->
    <form method="get" asp-action="App_Doc" asp-controller="Tourist">
        <input type="hidden" name="doctorId" value="@Model.DoctorId" />
        <input type="hidden" name="flow" value="@ViewBag.Flow" />

        <div class="form-group">
            <label for="appointmentDate">Select Appointment Date</label>
            <input type="date" id="appointmentDate" name="date"
                   min="@DateTime.Now.ToString("yyyy-MM-dd")"
                   value="@Model.SelectedDate?.ToString("yyyy-MM-dd")"
                   required />
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-calendar-check" style="margin-right: 8px;"></i> Check Availability
        </button>
    </form>

    <!-- Step 2: Show Available Time Slots -->
    @if (Model.AvailableSlots != null && Model.AvailableSlots.Any())
    {
        <div class="time-slots-container">
            <h3>Available Time Slots for @Model.SelectedDate?.ToString("dddd, MMMM d")</h3>

            <form method="post"  asp-action="App_Doc" asp-controller="Tourist"  asp-route-flow="@ViewBag.Flow">
                <input type="hidden" name="doctorId" value="@Model.DoctorId" />
                <input type="hidden" name="date" value="@Model.SelectedDate?.ToString("yyyy-MM-dd")" />

                <div class="slots-grid">
                    @foreach (var slot in Model.AvailableSlots)
                    {
                        <label class="time-slot">
                            <input type="radio" name="startTime" value="@slot.StartTime" required />
                            <span class="slot-time">@slot.StartTime.ToString(@"hh\:mm") - @slot.EndTime.ToString(@"hh\:mm")</span>
                        </label>
                    }
                </div>

                    <button type="submit" class="btn btn-primary">
                         <i class="fas fa-calendar-check" style="margin-right: 8px;"></i> Confirm Booking
                    </button>
            </form>
        </div>
    }
    else if (Model.SelectedDate.HasValue)
    {
        <div class="alert alert-warning">
            No available time slots for this date. Please select another date.
        </div>

    }
</div>

