    }

        .nurse-details h3 {
            margin: 0 0 0.25rem;
            font-weight: 600;
        }

        .nurse-details p {
            margin: 0;
            color: var(--text-light);
            font-size: 0.95rem;
        }

    .nurse-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: var(--primary);
        box-shadow: var(--shadow);
        flex-shrink: 0;
    }

    .navbar {
