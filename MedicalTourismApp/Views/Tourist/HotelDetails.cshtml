<div class="hotel-details-section">
    <div class="container py-5">
        <div class="text-center mb-6">
            <span class="badge bg-primary bg-opacity-10 mb-3 px-4 py-2 rounded-pill">
                <i class="fas fa-hotel me-2"></i> Premium Stays
            </span>
            <h1 class="display-4 fw-bold mb-3">Find Your Perfect Accommodation</h1>
            <p class="lead text-muted mx-auto" style="max-width: 700px;">
                Discover comfortable hotels with excellent amenities for your medical tourism journey
            </p>
        </div>

        <div class="row g-4">
            @foreach (var hotel in Model)
            {
                <div class="col-12 mb-5">
                    <div class="row">
                        <!-- Hotel Image Column -->
                        <div class="col-lg-6 mb-4">
                            <div class="card  border-0 shadow-lg">
                                <div class="image-slider">
                                    <button class="slider-nav slider-prev" onclick="prevSlide('slider-@hotel.Id')">
                                        <i class="fas fa-chevron-left"></i>
                                    </button>
                                    <button class="slider-nav slider-next" onclick="nextSlide('slider-@hotel.Id')">
                                        <i class="fas fa-chevron-right"></i>
                                    </button>
                                    <div class="slider-container" id="slider-@hotel.Id">
                                        @{
                                            var images = ViewData["Images"] as List<string> ?? new List<string>();
                                        }
                                        @if (images.Any())
                                        {
                                            foreach (var image in images)
                                            {
                                                <img src="@image" alt="@hotel.name" class="slider-image">
                                            }
                                        }
                                        else
                                        {
                                            <img src="~/images/no-image.jpg" alt="No image available" class="slider-image">
                                        }
                                    </div>
                                    <div class="slider-indicators">
                                        @if (images.Any())
                                        {
                                            for (int i = 0; i < images.Count; i++)
                                            {
                                                <button class="slider-indicator @(i == 0 ? "active" : "")" onclick="showSlide('slider-@hotel.Id', @i)"></button>
                                            }
                                        }
                                        else
                                        {
                                            <button class="slider-indicator active" onclick="showSlide('slider-@hotel.Id', 0)"></button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Hotel Details Column -->
                        <div class="col-lg-6 mb-4">
                            <div class="card h-100 border-0 shadow-lg">
                                <div class="card-body">
                                    <h2 class="text-primary mb-4">@hotel.name Details</h2>
                                    <div class="row mb-4">
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center mb-3">
                                                <i class="fas fa-phone-alt text-primary me-3 fs-5"></i>
                                                <div>
                                                    <h6 class="mb-0 text-muted">Contact</h6>
                                                    <p class="mb-0">@hotel.ContactNumber</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center mb-3">
                                                <i class="fas fa-map-marker-alt text-primary me-3 fs-5"></i>
                                                <div>
                                                    <h6 class="mb-0 text-muted">Location</h6>
                                                    @if (!string.IsNullOrEmpty(hotel.Location))
                                                    {
                                                        <button class="location-btn" onclick="viewOnMap('@hotel.Location')">
                                                            <i class="fas fa-map-marked-alt"></i> View on Map
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <p class="mb-0">Location not specified</p>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center mb-3">
                                                <i class="fas fa-bed text-primary me-3 fs-5"></i>
                                                <div>
                                                    <h6 class="mb-0 text-muted">Rooms</h6>
                                                    <p class="mb-0">@hotel.NumberOfRooms</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center mb-3">
                                                <i class="fas fa-users text-primary me-3 fs-5"></i>
                                                <div>
                                                    <h6 class="mb-0 text-muted">Guests</h6>
                                                    <p class="mb-0">@hotel.cap</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center mb-3">
                                                <i class="fas fa-dollar-sign text-primary me-3 fs-5"></i>
                                                <div>
                                                    <h6 class="mb-0 text-muted">Price</h6>
                                                    <p class="mb-0">$@hotel.Price/night</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center mb-3">
                                                <i class="fas fa-star text-primary me-3 fs-5"></i>
                                                <div>
                                                    <h6 class="mb-0 text-muted">Rating</h6>
                                                    @{
                                                        var reviews = ViewData["Reviews"] as IEnumerable<dynamic> ?? new List<dynamic>();
                                                        var averageRating = reviews.Any() ? reviews.Average(r => (int)r.Rating) : 0.0;
                                                    }
                                                    <p class="mb-0">@averageRating.ToString("F1")/5 (@reviews.Count() reviews)</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <h5 class="text-primary mb-3"><i class="fas fa-info-circle me-2"></i>Facilities</h5>
                                        <div class="d-flex flex-wrap gap-2">
                                            @if (hotel.HasPool)
                                            {
                                                <span class="badge feature-badge">
                                                    <i class="fas fa-swimming-pool facility-icon"></i> Pool
                                                </span>
                                            }
                                            @if (hotel.HasGym)
                                            {
                                                <span class="badge feature-badge">
                                                    <i class="fas fa-dumbbell facility-icon"></i> Gym
                                                </span>
                                            }
                                            @if (hotel.WifiAvailability)
                                            {
                                                <span class="badge feature-badge">
                                                    <i class="fas fa-wifi facility-icon"></i> WiFi
                                                </span>
                                            }
                                            @if (hotel.ParkingAvailability)
                                            {
                                                <span class="badge feature-badge">
                                                    <i class="fas fa-parking facility-icon"></i> Parking
                                                </span>
                                            }
                                        </div>
                                    </div>

                                    
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Review Submission Form -->
                    @{
                        var Treviews = ViewData["Treviews"] as IEnumerable<dynamic> ?? new List<dynamic>();
                    }
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Patient") && !Treviews.Any())
                    {
                        <div class="row mb-4 review-section">
                            <div class="col-12">
                                <h3 class="text-primary mb-3"><i class="fas fa-star me-2"></i>Write a Review</h3>
                                <form asp-action="SubmitReview" asp-controller="Tourist" method="post" class="review-form">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="serviceProviderId" value="@hotel.ServiceProviderId" />
                                    <input type="hidden" name="hotelId" value="@hotel.Id" />
                                    <input type="hidden" name="appointmentType" value="Hotel" />
                                    <input type="hidden" name="returnUrl" value="@Url.Action("HotelDetails", "Tourist", new { id = hotel.Id })" />
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Rating</label>
                                        <div class="ratings">
                                            <span class="star" data-rating="1" data-appointment-id="@hotel.Id"><i class="fas fa-star"></i></span>
                                            <span class="star" data-rating="2" data-appointment-id="@hotel.Id"><i class="fas fa-star"></i></span>
                                            <span class="star" data-rating="3" data-appointment-id="@hotel.Id"><i class="fas fa-star"></i></span>
                                            <span class="star" data-rating="4" data-appointment-id="@hotel.Id"><i class="fas fa-star"></i></span>
                                            <span class="star" data-rating="5" data-appointment-id="@hotel.Id"><i class="fas fa-star"></i></span>
                                        </div>
                                        <input type="hidden" id="rating-@hotel.Id" name="rating" value="0" required />
                                    </div>
                                    <div class="mb-3">
                                        <label for="comment-@hotel.Id" class="form-label fw-bold">Comment</label>
                                        <textarea class="form-control" id="comment-@hotel.Id" name="comment" rows="4" maxlength="500" placeholder="Share your experience..." required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-paper-plane me-2"></i>Submit Review
                                    </button>
                                </form>
                            </div>
                        </div>
                    }

                    <!-- Reviews Display -->
                    <div class="row review-section">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h3 class="text-primary"><i class="fas fa-comments me-2"></i>Reviews (<span id="review-count-@hotel.Id">@((ViewData["Reviews"] as IEnumerable<dynamic>)?.Count() ?? 0)</span>)</h3>
                                <div class="sort-reviews">
                                    <select id="sortReviews-@hotel.Id" class="form-select" style="width: 200px;">
                                        <option value="newest">Sort by: Newest First</option>
                                        <option value="oldest">Sort by: Oldest First</option>
                                        <option value="highest">Sort by: Highest Rating</option>
                                        <option value="lowest">Sort by: Lowest Rating</option>
                                    </select>
                                </div>
                            </div>
                            <div id="reviews-container-@hotel.Id">
                                @{
                                     reviews = ViewData["Reviews"] as IEnumerable<dynamic> ?? new List<dynamic>();
                                }
                                @if (reviews.Any())
                                {
                                    foreach (var review in reviews)
                                    {
                                        <div class="review-card" data-rating="@review.Rating" data-date="@review.CreatedAt">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="avatar">@(string.IsNullOrEmpty(review.UserName) ? "A" : review.UserName[0])</div>
                                                <div>
                                                    <strong>@(review.UserName ?? "Anonymous")</strong>
                                                    <div class="timestamp">@(DateTime.Parse(review.CreatedAt).ToString("MMM dd, yyyy"))</div>
                                                </div>
                                            </div>
                                            <div class="ratings mb-2">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <span class="star @(i <= review.Rating ? "active" : "")"><i class="fas fa-star"></i></span>
                                                }
                                            </div>
                                            <p class="mb-0">@review.Comment</p>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted" id="no-reviews-message-@hotel.Id">No reviews yet. Be the first to share your experience!</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
