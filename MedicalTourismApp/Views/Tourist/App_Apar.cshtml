    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let bookedDates = @Html.Raw(Json.Serialize(ViewBag.BookedDates));

            const dateInput = document.getElementById('bookingDates');

            flatpickr(dateInput, {
                mode: "range",
                dateFormat: "Y-m-d",
                disable: bookedDates,
                minDate: "today",
                allowInput: false,
                clickOpens: true,
                onOpen: function() {
                    dateInput.blur();
                    dateInput.style.borderColor = "var(--primary-color)";
                    dateInput.style.boxShadow = "0 0 0 3px rgba(134, 184, 23, 0.2)";
                },
                onClose: function() {
                    dateInput.style.borderColor = "";
                    dateInput.style.boxShadow = "";
                },
                onReady: function() {
                    dateInput.classList.add('flatpickr-input');
                }
            });

            // Make the entire input clickable
            document.querySelector('.input-icon').addEventListener('click', function(e) {
                if (e.target !== dateInput) {
                    dateInput.focus();
                }
            });
        });
    </script>
