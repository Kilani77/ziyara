        margin-top: 0;
        margin-bottom: 20px;
    }

    .calendar-controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 25px 0;
    }

        .calendar-controls button {
            background: #3498db;
            color: white;
            border: none;
