                        width: 50%;
                        border-radius: 5px;
                        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
                    }

                    .close {
                        color: #aaa;
                        float: right;
                        font-size: 28px;
                        font-weight: bold;
                        cursor: pointer;
                    }

                        .close:hover {
                            color: black;
                        }

                    .detail-row {
                        display: flex;
                        margin-bottom: 10px;
                    }

                    .detail-label {
                        font-weight: bold;
                        width: 120px;
                    }

                    .cancel-btn {
                        margin-left: 10px;
                    }

                    .reason-input {
                        width: 70%;
                        padding: 5px;
                        border: 1px solid #ddd;
                        border-radius: 4px;
                    }
                </style>

                <!-- Modal for appointment details -->
                <div id="appointmentModal" class="modal">
                    <div class="modal-content">
                        <span class="close">&times;</span>
                        <h2>Appointment Details</h2>
                        <div id="appointmentDetails"></div>
                    </div>
                </div>
                <script>
                    const calendarBody = document.getElementById('calendar-body');
                    const monthYear = document.getElementById('month-year');
                    const prevMonthBtn = document.getElementById('prev-month');
                    const nextMonthBtn = document.getElementById('next-month');
                    const appointmentsBody = document.getElementById('appointments-body');
                    const modal = document.getElementById('appointmentModal');
                    const appointmentDetails = document.getElementById('appointmentDetails');
                    const modalClose = document.querySelector('.close');

                    let currentDate = new Date();
                    let selectedDate = null;
                    let allAppointments = [];
                    let appointmentColorMap = new Map(); // To keep track of appointment colors
                    let colorCounter = 1;
                    let apartmentId;


                    // Safely parse apartment ID or use a default
                    try {
                        apartmentId = parseInt('@ViewBag.NurseId');
                        if (isNaN(apartmentId)) {
                            console.error('Invalid apartment ID');
                            apartmentId = 0; // Default or fallback value

                        }

                        else{

                        }
                    } catch (e) {
                        console.error('Error parsing apartment ID:', e);
                        apartmentId = 0; // Default or fallback value
                    }

                    function formatDate(date) {
                        if (date instanceof Date) {
                            const year = date.getFullYear();
                            const month = String(date.getMonth() + 1).padStart(2, '0');
                            const day = String(date.getDate()).padStart(2, '0');
                            return `${year}-${month}-${day}`;
                        }
                        return date; // If already a string
                    }

                    function parseDate(dateString) {
                        const [year, month, day] = dateString.split('-').map(Number);
                        return new Date(year, month - 1, day);
                    }

                    function formatDisplayDate(dateString) {
                        if (!dateString) return 'N/A';

                        const date = typeof dateString === 'string' ? parseDate(dateString) : dateString;
                        return date.toLocaleDateString('default', {
                            year: 'numeric',
                            month: 'short',
                            day: 'numeric'
                        });
                    }

                    function renderCalendar(date) {
                        const year = date.getFullYear();
                        const month = date.getMonth();
                        const firstDay = new Date(year, month, 1).getDay();
                        const daysInMonth = new Date(year, month + 1, 0).getDate();

                        calendarBody.innerHTML = '';
                        monthYear.textContent = date.toLocaleString('default', { month: 'long', year: 'numeric' }).toUpperCase();

                        // Reset appointment color map for new month
                        appointmentColorMap.clear();
                        colorCounter = 1;

                        let dayCount = 1;
                        for (let row = 0; row < 6; row++) {
                            const tr = document.createElement('tr');

                            for (let col = 0; col < 7; col++) {
                                const td = document.createElement('td');

                                if ((row === 0 && col < firstDay) || dayCount > daysInMonth) {
                                    td.textContent = '';
                                } else {
                                    const dayNum = dayCount;
                                    const thisDate = new Date(year, month, dayNum);
                                    const thisDateFormatted = formatDate(thisDate);

                                    td.innerHTML = `<div>${dayNum}</div>`;
                                    td.setAttribute('data-date', thisDateFormatted);
                                    td.classList.add('calendar-day');

                                    // Check for appointments on this day
                                    const appointmentsForDay = allAppointments.filter(app => {
                                        const startDate = app.startDate;
                                        const endDate = app.endDate;
                                        return thisDateFormatted >= startDate && thisDateFormatted <= endDate;
                                    });

                                    if (appointmentsForDay.length > 0) {
                                        // Set background color based on appointment
                                        appointmentsForDay.forEach(app => {
                                            const appId = app.id;
                                            if (!appointmentColorMap.has(appId)) {
                                                appointmentColorMap.set(appId, colorCounter);
                                                colorCounter = (colorCounter % 5) + 1; // Cycle through 5 colors
                                            }

                                            // For the first appointment, add a dot
                                            if (!td.querySelector('.appointment-dot')) {
                                                const dot = document.createElement('div');
                                                dot.classList.add('appointment-dot');
                                                td.appendChild(dot);
                                            }
                                        });

                                        // If only one appointment spans this day, color the background
                                        if (appointmentsForDay.length === 1) {
                                            const colorClass = `appointment-color-${appointmentColorMap.get(appointmentsForDay[0].id)}`;
                                            td.classList.add(colorClass);
                                        } else {
                                            // If multiple appointments, use default highlight
                                            td.classList.add('appointment-highlight');
                                        }
                                    }

                                    if (selectedDate && formatDate(thisDate) === formatDate(selectedDate)) {
                                        td.classList.add('selected');
                                    }

                                    td.addEventListener('click', () => {
                                        // Remove selection from previously selected day
                                        const selectedDays = document.querySelectorAll('.calendar-day.selected');
                                        selectedDays.forEach(day => day.classList.remove('selected'));

                                        // Select this day
                                        td.classList.add('selected');
                                        selectedDate = thisDate;

                                        // Display appointments for this day
                                        displayAppointmentsForDate(thisDate);
                                    });

                                    dayCount++;
                                }

                                tr.appendChild(td);
                            }

                            calendarBody.appendChild(tr);

                            // Break early if we've gone through all days in the month
                            if (dayCount > daysInMonth) {
                                break;
                            }
                        }
                    }

                    // Endpoint to get all appointments for the apartment for a specific month
                    function loadMonthAppointments(date) {
                        const year = date.getFullYear();
                        const month = (date.getMonth() + 1).toString().padStart(2, '0');

                        fetch(`/api/Appointments/for-montha/${apartmentId}/${year}-${month}`)
                            .then(response => {
                                if (!response.ok) {
                                    throw new Error('Failed to fetch appointments');
                                }
                                return response.json();
                            })
                            .then(data => {
                                allAppointments = data;
                                renderCalendar(date);

                                // If a date is selected, update appointments
                                if (selectedDate && selectedDate.getMonth() === date.getMonth() &&
                                    selectedDate.getFullYear() === date.getFullYear()) {
                                    displayAppointmentsForDate(selectedDate);
                                } else {
                                    // Clear selected date when changing months
                                    selectedDate = null;
                                    // Default to showing message that no date is selected
                                    appointmentsBody.innerHTML = '<tr><td colspan="5" class="no-appointments">Select a date to view appointments</td></tr>';
                                }
                            })
                            .catch(error => {
                                console.error('Error loading appointments:', error);
                                appointmentsBody.innerHTML = `<tr><td colspan="5" class="no-appointments text-danger">Error loading appointment data</td></tr>`;
                            });
                    }

                    function displayAppointmentsForDate(date) {
                        const dateFormatted = formatDate(date);

                        // Filter appointments for this date
                        const appointmentsForDay = allAppointments.filter(app => {
                            const startDate = app.startDate;
                            const endDate = app.endDate;
                            return dateFormatted >= startDate && dateFormatted <= endDate;
                        });

                        appointmentsBody.innerHTML = '';

                        if (appointmentsForDay.length === 0) {
                            appointmentsBody.innerHTML = `<tr><td colspan="5" class="no-appointments">No appointments on ${formatDisplayDate(dateFormatted)}</td></tr>`;
                            return;
                        }

                        appointmentsForDay.forEach(app => {
                            const row = document.createElement('tr');
                            const colorClass = `appointment-color-${appointmentColorMap.get(app.id)}`;

                            row.innerHTML = `
                                <td>${formatDisplayDate(app.startDate)}</td>
                                <td>${formatDisplayDate(app.endDate)}</td>
                                <td>${app.touristName || 'N/A'}</td>
                                <td>${app.ascort || '0'}</td>
                                <td><input type="text" class="reason-input mr-2" data-id="${app.id}" placeholder="Reason"><button type="button" class="btn btn-info cancel-btn" data-id="${app.id}">Cancel</button></td>
                            `;

                            row.style.backgroundColor = getComputedStyle(document.documentElement)
                                .getPropertyValue(`--appointment-color-${appointmentColorMap.get(app.id)}`) ||
                                window.getComputedStyle(document.querySelector(`.${colorClass}`)).backgroundColor;

                            appointmentsBody.appendChild(row);
                        });

                        // Set up event listeners for the newly created buttons
                        document.querySelectorAll('.cancel-btn').forEach(button => {
                            button.addEventListener('click', function() {
                                const id = this.dataset.id;
                                const reasonInput = document.querySelector(`.reason-input[data-id="${id}"]`);
                                const reason = reasonInput ? reasonInput.value : '';

                                if (!reason) {
                                    alert("Please enter a reason for rejection.");
                                    return;
                                }

                                if (confirm("Are you sure you want to reject this appointment?")) {
                                    fetch(`/api/Appointments/rejecta/${id}`, {
                                        method: 'PUT',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify(reason)
                                    })
                                    .then(response => {
                                        if (response.ok) {
                                            alert("Appointment successfully rejected.");
                                            // Remove appointment from display and reload calendar
                                            loadMonthAppointments(currentDate);
                                        } else {
                                            alert("Error rejecting appointment. Please try again.");
                                        }
                                    })
                                    .catch(error => {
                                        console.error('Error:', error);
                                        alert("Error rejecting appointment. Please try again.");
                                    });
                                }
                            });
                        });
                    }

                    function showAppointmentDetails(appointment) {
                        // Format the details for display
                        appointmentDetails.innerHTML = `
                            <div class="detail-row">
                                <div class="detail-label">Start Date:</div>
                                <div>${formatDisplayDate(appointment.startDate)}</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label">End Date:</div>
                                <div>${formatDisplayDate(appointment.endDate)}</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label">Tourist:</div>
                                <div>${appointment.touristName || 'N/A'}</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label">Escorts:</div>
                                <div>${appointment.ascort || '0'}</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label">Status:</div>
                                <div>${appointment.approve}</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label">Response:</div>
                                <div>${appointment.response || 'No response'}</div>
                            </div>
                        `;

                        // Show the modal
                        modal.style.display = 'block';
                    }

                    // Event Listeners
                    prevMonthBtn.addEventListener('click', () => {
                        currentDate.setMonth(currentDate.getMonth() - 1);
                        loadMonthAppointments(currentDate);
                    });

                    nextMonthBtn.addEventListener('click', () => {
                        currentDate.setMonth(currentDate.getMonth() + 1);
                        loadMonthAppointments(currentDate);
                    });

                    modalClose.addEventListener('click', () => {
                        modal.style.display = 'none';
                    });

                    window.addEventListener('click', (event) => {
                        if (event.target === modal) {
                            modal.style.display = 'none';
                        }
                    });

                    // Initialize
                    loadMonthAppointments(currentDate);
                </script>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {

            // Initialize modal if needed
                document.getElementById('logout-btn')?.addEventListener('click', function(e) {
            e.preventDefault();
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Identity/Account/Logout';

            const tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = token;
            form.appendChild(tokenInput);

            document.body.appendChild(form);
            form.submit();
        });

        // Handle upgrade button
        document.querySelector('.btn-primary')?.addEventListener('click', function(e) {
            // Ensure the link works even if other event handlers interfere
            window.location.href = '/subscription';
        });

        function disableDashboardInteractions() {
            // Disable all interactive elements except the modal
            document.querySelectorAll('a, button, input, select, textarea').forEach(el => {
                if (!el.closest('.subscription-modal')) {
                    el.style.pointerEvents = 'none';
                    el.style.opacity = '0.5';
                    el.tabIndex = -1;
                }
            });
        }

            // Handle extend trial button
            document.getElementById('extend-trial')?.addEventListener('click', function() {
                fetch('/api/appointments/extend-trial', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(`Trial extended until ${new Date(data.newEndDate).toLocaleDateString()}`);
                        hideSubscriptionPrompt();
                        location.reload();
                    }
                })
                .catch(error => {
                    alert('Error extending trial: ' + error.message);
                });
            });

            function showSubscriptionPrompt() {
                document.body.classList.add('modal-open');
                document.getElementById('dashboard-overlay').style.display = 'block';
                document.getElementById('subscription-modal').style.display = 'block';
            }

            function hideSubscriptionPrompt() {
                document.body.classList.remove('modal-open');
                document.getElementById('dashboard-overlay').style.display = 'none';
                document.getElementById('subscription-modal').style.display = 'none';
            }
        });
    </script>

