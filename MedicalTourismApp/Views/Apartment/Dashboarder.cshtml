                                   updateTimer();
                                   setInterval(updateTimer, 1000);
                               } else {
                                   timerElement.textContent = 'Not Available';
                                   statusElement.classList.add('warning');
                               }
                           } catch (error) {
                               console.error('Error in subscription timer:', error);
                               timerElement.textContent = 'Error';
                               statusElement.classList.add('warning');
                           }
                       });
                </script>
