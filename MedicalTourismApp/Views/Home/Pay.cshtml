<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<style>
    :root {
        --primary-color: #86B817; /* Your requested green */
        --secondary-color: #6A9A14; /* Slightly darker green */
        --light-color: #f8f9fa;
        --dark-color: #343a40;
        --accent-color: #FF6B35; /* Complementary orange for highlights */
    }

    body {
        background-color: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .payment-container {
        max-width: 450px;
        margin: 2rem auto;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        background: white;
        transition: all 0.3s ease;
        border-top: 5px solid var(--primary-color);
    }

        .payment-container:hover {
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

    .payment-header {
        background: white;
        color: var(--dark-color);
        padding: 1.5rem;
        text-align: center;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

        .payment-header h3 {
            color: var(--primary-color);
            font-weight: 700;
        }

    .payment-body {
        padding: 2rem;
    }

    .card-icons img {
        transition: all 0.3s ease;
        margin: 0 8px;
        filter: grayscale(30%);
    }

        .card-icons img:hover {
            transform: translateY(-5px);
            filter: grayscale(0%);
        }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #e0e0e0;
        transition: all 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(134, 184, 23, 0.25);
        }

    .btn-pay {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-pay:hover {
            background: var(--secondary-color);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(134, 184, 23, 0.4);
        }

    .input-group-text {
        background-color: #f8f9fa;
        border-radius: 8px 0 0 8px !important;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 8px;
    }

    .expiration-inputs {
        display: flex;
        gap: 10px;
    }

        .expiration-inputs select {
            flex: 1;
        }

    /* Credit card preview effect */
    .card-preview {
        height: 180px;
        background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
        border-radius: 12px;
        padding: 20px;
        color: white;
        margin-bottom: 25px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(134, 184, 23, 0.3);
        transition: all 0.3s ease;
    }

        .card-preview::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .card-preview::before {
            content: '';
            position: absolute;
            bottom: -30%;
            right: -30%;
            width: 150px;
            height: 150px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
        }

    .card-number-display {
        font-family: 'Courier New', monospace;
        font-size: 1.2rem;
        letter-spacing: 1.5px;
        margin-top: 30px;
        word-spacing: 5px;
    }

    .card-bottom {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

    .card-name-display {
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    .card-expiry-display {
        font-size: 0.9rem;
    }

    .card-chip {
        width: 40px;
        height: 30px;
        background: linear-gradient(135deg, #ffd700, #c9a227);
        border-radius: 5px;
        position: absolute;
        top: 20px;
    }

    .card-brand {
        position: absolute;
        right: 20px;
        top: 20px;
        font-size: 1.5rem;
        font-weight: bold;
        font-style: italic;
        opacity: 0.8;
    }

    /* Responsive adjustments */
    @@media (max-width: 576px) {
        .payment-container

    {
        margin: 1rem;
        border-radius: 10px;
    }

    .payment-body {
        padding: 1.5rem;
    }

    }

    /* Custom checkbox for terms */
    .terms-check {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
    }

        .terms-check input {
            margin-right: 10px;
        }

        .terms-check label {
            font-size: 0.9rem;
        }

    /* Animated underline for header */
    .header-underline {
        height: 3px;
        width: 80px;
        background: var(--accent-color);
        margin: 10px auto 20px;
        border-radius: 3px;
    }
</style>

<div class="payment-container animate__animated animate__fadeIn">
    <div class="payment-header">
        <h3 class="mb-0">Secure Payment</h3>
        <div class="header-underline animate__animated animate__fadeInLeft"></div>
    </div>

    <div class="payment-body">
        <div class="card-preview">
            <div class="card-chip"></div>
            <div class="card-brand">VISA</div>
            <div class="card-number-display" id="cardNumberDisplay">•••• •••• •••• ••••</div>
            <div class="card-bottom">
                <div class="card-name-display" id="cardNameDisplay">YOUR NAME</div>
                <div class="card-expiry-display" id="cardExpiryDisplay">••/••</div>
            </div>
        </div>

        <div class="text-center mb-4 card-icons">
            <img src="https://img.icons8.com/color/48/mastercard-logo.png" width="40" class="animate__animated animate__bounceIn" />
            <img src="https://img.icons8.com/color/48/visa.png" width="40" class="animate__animated animate__bounceIn animate__delay-1s" />
            <img src="https://img.icons8.com/color/48/amex.png" width="40" class="animate__animated animate__bounceIn animate__delay-2s" />
            <img src="https://img.icons8.com/color/48/discover.png" width="40" class="animate__animated animate__bounceIn animate__delay-3s" />
        </div>

        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger animate__animated animate__shakeX">@ViewData["Error"]</div>
        }

        <form method="post" asp-action="Pay">
            <div class="mb-4">
                <label class="form-label">Name on card</label>
                <input type="text" class="form-control" name="cardName" placeholder="Meet Patel" required
                       oninput="document.getElementById('cardNameDisplay').innerText = this.value.toUpperCase() || 'YOUR NAME'">
            </div>

            <div class="mb-4">
                <label class="form-label">Card number</label>
                <input type="text" class="form-control" name="cardNumber" placeholder="0000 0000 0000 0000" required
                       oninput="formatCardNumber(this)" maxlength="19">
            </div>

            <div class="row mb-4">
                <div class="col-md-6 mb-3 mb-md-0">
                    <label class="form-label">Expiration</label>
                    <div class="expiration-inputs">
                        <select class="form-select" name="expMonth" required
                                onchange="updateCardExpiry()">
                            <option selected disabled>MM</option>
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i.ToString().PadLeft(2, '0')">@i.ToString().PadLeft(2, '0')</option>
                            }
                        </select>
                        <select class="form-select" name="expYear" required
                                onchange="updateCardExpiry()">
                            <option selected disabled>YY</option>
                            @for (int i = DateTime.Now.Year; i <= DateTime.Now.Year + 10; i++)
                            {
                                <option value="@i.ToString().Substring(2)">@i.ToString().Substring(2)</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Security Code</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="cardCvc" placeholder="CVC" required maxlength="4">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                </div>
            </div>

            <div class="terms-check">
                <input type="checkbox" id="terms" required>
                <label for="terms">I agree to the terms and conditions</label>
            </div>

            <button type="submit" class="btn btn-pay w-100 animate__animated animate__pulse animate__infinite animate__slower">
                <i class="fas fa-lock"></i> Pay Securely
            </button>
        </form>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script>
    // Format card number with spaces
    function formatCardNumber(input) {
        // Remove all non-digit characters
        let value = input.value.replace(/\D/g, '');

        // Add space every 4 digits
        let formatted = value.replace(/(\d{4})(?=\d)/g, '$1 ');

        // Update input value
        input.value = formatted;

        // Update card preview
        let display = formatted || '•••• •••• •••• ••••';
        document.getElementById('cardNumberDisplay').innerText = display;

        // Detect card brand (simplified)
        const firstDigit = value.charAt(0);
        const brand = document.querySelector('.card-brand');
        if (firstDigit === '4') {
            brand.innerText = 'VISA';
        } else if (firstDigit === '5') {
            brand.innerText = 'MASTERCARD';
        } else if (firstDigit === '3') {
            brand.innerText = 'AMEX';
        } else if (firstDigit === '6') {
            brand.innerText = 'DISCOVER';
        } else {
            brand.innerText = '';
        }
    }

    // Update card expiry display
    function updateCardExpiry() {
        const month = document.querySelector('[name="expMonth"]').value || '••';
        const year = document.querySelector('[name="expYear"]').value || '••';
        document.getElementById('cardExpiryDisplay').innerText = `${month}/${year}`;
    }

    // Add animation to form elements on focus
    document.querySelectorAll('.form-control, .form-select').forEach(element => {
        element.addEventListener('focus', function() {
            this.parentElement.classList.add('animate__animated', 'animate__pulse');
        });

        element.addEventListener('blur', function() {
            this.parentElement.classList.remove('animate__animated', 'animate__pulse');
        });
    });
</script>