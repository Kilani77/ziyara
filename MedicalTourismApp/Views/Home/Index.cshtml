    .badge-accommodation {
        background-color: #28a745;
    }

    .badge-transport {
        background-color: #17a2b8;
    }

    .badge-tourism {
        background-color: #ffc107;
    }

    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }

    .text-primary-medical {
        color: #007bff !important;
    }

    .text-primary-accommodation {
        color: #28a745 !important;
    }

    .text-primary-transport {
        color: #17a2b8 !important;
    }

    .text-primary-tourism {
        color: #ffc107 !important;
